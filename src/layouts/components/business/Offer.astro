---
interface OfferItem {
    title: string;
    description: string;
    image: string;
    layout?: string;
}
interface Props {
  title: string;
  subtitle: string;
  offers: OfferItem[];
}
const { title, subtitle, offers } = Astro.props;
---
<section class="py-32 bg-dark text-light">
    <div class="container mx-auto px-6">
        <div class="mb-20 reveal">
            <h2 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">{title}</h2>
            <p class="text-xl text-light/50">{subtitle}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[400px]">
            {offers.map((offer, index) => (
                <article
                    class={`group relative overflow-hidden rounded-[40px] border border-light/5 bg-[#1a1a1a] cursor-pointer reveal ${offer.layout ?? ""}`}
                    style={`transition-delay: ${index * 100}ms`}
                >
                    <div
                        class="absolute inset-0 bg-cover bg-center opacity-40 transition duration-500 group-hover:opacity-60 group-hover:scale-105"
                        style={`background-image: url('${offer.image}')`}
                    ></div>
                    <div class="absolute inset-0 bg-dark/40 group-hover:bg-dark/20 transition duration-500"></div>
                    <div class="relative z-10 flex h-full flex-col justify-end p-10 bg-linear-to-t from-dark to-transparent">
                        <h3 class="text-3xl font-bold mb-2">{offer.title}</h3>
                        <p class="text-light/80 mb-6 max-w-xl transition duration-300 group-hover:translate-y-0 group-hover:opacity-100 translate-y-4 opacity-90">
                            {offer.description}
                        </p>
                        <span class="inline-flex items-center text-accent font-semibold gap-2">
                            View Details
                            <span class="inline-flex">
                                <svg width="14" height="12" viewBox="0 0 14 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M8 11L13 6M13 6L8 1M13 6H1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                        </span>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>