---
interface Props {
  title: string;
  buttonText: string;
}
const { title, buttonText } = Astro.props;
---
<section class="cta-section py-32 flex items-center justify-center bg-dark text-light">
    <div class="text-center reveal">
        <h2 class="text-5xl md:text-8xl font-bold tracking-tighter mb-8">{title}</h2>
        <a href="#" class="inline-block bg-accent text-light text-lg font-semibold px-10 py-5 rounded-full hover:bg-white hover:text-dark transition-all duration-300 transform hover:scale-105 shadow-[0_0_30px_rgba(255,93,0,0.4)]">
            {buttonText}
        </a>
    </div>
</section>