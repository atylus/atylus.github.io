---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---
<section class="py-24 relative overflow-hidden bg-dark text-light">
    <div class="absolute right-0 top-0 w-1/3 h-full bg-accent/5 blur-3xl -z-10"></div>
    
    <div class="container mx-auto px-6">
        <div class="flex flex-col lg:flex-row items-center gap-16">
            <div class="lg:w-1/2 reveal">
                <div class="relative rounded-[40px] overflow-hidden group">
                    <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=2070&auto=format&fit=crop" alt="Process" class="w-full object-cover transition duration-700 group-hover:scale-110">
                    <div class="absolute inset-0 bg-dark/30 group-hover:bg-dark/10 transition duration-500"></div>
                    
                    <a href="#" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 bg-light/10 backdrop-blur-md border border-light/20 rounded-full flex items-center justify-center group-hover:scale-110 transition duration-300">
                        <i class="fas fa-play text-light ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="lg:w-1/2 reveal">
                <h2 class="text-4xl md:text-6xl font-bold leading-tight mb-8" set:html={title}></h2>
                <p class="text-xl text-light/60 mb-12">
                    {description}
                </p>

                <div class="grid grid-cols-2 gap-8">
                    <div class="border-l border-light/10 pl-6">
                        <span class="text-4xl font-bold text-accent block mb-2">98%</span>
                        <span class="text-sm text-light/50 uppercase tracking-wide">Client Satisfaction</span>
                    </div>
                    <div class="border-l border-light/10 pl-6">
                        <span class="text-4xl font-bold text-accent block mb-2">4x</span>
                        <span class="text-sm text-light/50 uppercase tracking-wide">ROI Increase</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>