---
import { getEntryCTM } from "@/lib/customContentLoader.astro";
import overrideObjects from "@/lib/utils/overrideObjects.ts";
import { markdownify } from "@/lib/utils/textConverter";
import ReactIcons from "@/helpers/ReactIcons.astro";
import type { z } from "astro/zod";
import type { Section } from "@/types";
import type { servicesSectionSchema } from "@/sections.schema";

type ServicesInterface = Section & z.infer<typeof servicesSectionSchema>;
type Props = {
  content?: ServicesInterface;
};

const fallbackContent: ServicesInterface = {
  enable: true,
  eyebrow: "2026 Capabilities",
  title: "Beyond",
  highlight: "Human Limits.",
  description:
    "Traditional agencies react. We predict. Deep learning plus spatial computing lets us eliminate friction before it hits your roadmap.",
  spinnerLabel: "Orbit",
  cards: [
    {
      icon: "FaBrain",
      badge: "Synelytics AI",
      title: "Predictive Ad-Engines",
      frictionTitle: "The Friction",
      frictionDescription:
        "Manual A/B tests and reactive bids torch spend before insights arrive.",
      solutionTitle: "Our Solution",
      solutionDescription:
        "Synelytics simulates millions of variations to lock winning campaigns before media dollars move.",
      delay: 0.1,
    },
    {
      icon: "FaCubes",
      badge: "PINALOG Spatial",
      title: "3D Logistics Twins",
      frictionTitle: "The Friction",
      frictionDescription:
        "Spreadsheets canâ€™t expose volumetric waste across warehouses.",
      solutionTitle: "Our Solution",
      solutionDescription:
        "PINALOG renders browser-based twins plus ML packing logic to hit near-100% container density.",
      delay: 0.2,
    },
    {
      icon: "FaFingerprint",
      badge: "Generative ID",
      title: "Adaptive Brand Systems",
      frictionTitle: "The Friction",
      frictionDescription:
        "Static logos fall flat inside real-time, sentiment-driven surfaces.",
      solutionTitle: "Our Solution",
      solutionDescription:
        "Generative ID rebuilds motion, color, and copy on the fly from live interaction data.",
      delay: 0.3,
    },
    {
      icon: "FaRobot",
      badge: "Agentic Ops",
      title: "Autonomous Operations",
      frictionTitle: "The Friction",
      frictionDescription:
        "Manual checkpoints slow lead qualification, vendor syncs, and invoicing.",
      solutionTitle: "Our Solution",
      solutionDescription:
        "Agentic Ops deploys autonomous agents to negotiate, route, and reconcile workflows 24/7.",
      delay: 0.35,
    },
  ],
};

const defaultContent = (
  await getEntryCTM("sections", "services-section", Astro.currentLocale)
)
  ?.data as ServicesInterface;

let baseContent = fallbackContent;

if (defaultContent) {
  baseContent = overrideObjects(
    { ...fallbackContent },
    defaultContent,
  ) as ServicesInterface;
}

const actualContent = overrideObjects(
  { ...baseContent },
  (Astro.props as Props)?.content,
) as ServicesInterface;

const {
  enable = true,
  eyebrow,
  title,
  highlight,
  description,
  spinnerLabel,
  cards = [],
} = actualContent;

if (!enable) {
  return null;
}

const hasCards = cards && cards.length > 0;

if (!hasCards) {
  return null;
}
---

<section
  id="capabilities"
  class="services-section relative overflow-hidden py-24">
  <div class="container relative z-10 mx-auto px-6 lg:px-12">
    <div class="flex flex-col gap-16 lg:flex-row">
      <div class="lg:w-1/3">
        <div class="services-reveal sticky top-32">
          {eyebrow && (
            <div class="mb-6 flex items-center gap-3">
              <div class="h-px w-8 bg-accent"></div>
              <span class="text-xs font-bold uppercase tracking-[0.2em] text-accent">
                {eyebrow}
              </span>
            </div>
          )}
          {(title || highlight) && (
            <h2 class="services-heading mb-8 text-4xl font-bold leading-[1.05] text-[#fffafa] drop-shadow-[0_6px_16px_rgba(0,0,0,0.6)] md:text-6xl">
              {title && (
                <span class="text-[#fffafa]" set:html={markdownify(title)} />
              )}
              {highlight && (
                <span
                  class="block text-transparent bg-clip-text bg-gradient-to-r from-[#fffafa] via-[#ff5d00]/60 to-[#ff5d00]"
                  set:html={markdownify(highlight)}
                />
              )}
            </h2>
          )}
          {description && (
            <p
              class="mb-10 text-lg leading-relaxed text-[#fffafa]/70 font-primary"
              set:html={markdownify(description)}
            />
          )}
          <div class="services-spinner flex h-20 w-20 items-center justify-center rounded-full border border-[#fffafa]/10">
            <div class="h-2 w-2 rounded-full bg-accent"></div>
          </div>
        </div>
      </div>

      <div class="lg:w-2/3">
        <div class="space-y-8">
          {cards?.map((card, index) => (
            <article
              class="services-card group rounded-[30px] border border-[#fffafa]/10 bg-[#110404] p-8 text-[#fffafa] transition-all duration-500 hover:border-[#ff5d00]/50"
              style={`animation-delay: ${(card.delay ?? (index + 1) * 0.1).toFixed(2)}s;`}>
              <div class="mb-6 flex items-center gap-4">
                <div class="flex h-14 w-14 items-center justify-center rounded-2xl bg-[#ff5d00]/20 text-2xl text-[#ff5d00] transition-transform duration-300 group-hover:scale-110">
                  <ReactIcons icon={card.icon || "FaRocket"} />
                </div>
                {card.badge && (
                  <span class="rounded-full border border-[#fffafa]/10 px-3 py-1 text-xs font-mono uppercase tracking-[0.2em] text-[#fffafa]/60">
                    {card.badge}
                  </span>
                )}
              </div>
              <h3 class="services-card__title mb-4 text-2xl md:text-3xl font-bold tracking-tight text-[#fffafa] drop-shadow-[0_6px_16px_rgba(0,0,0,0.45)]">
                {card.title}
              </h3>
              <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                <div class="border-l border-[#fffafa]/15 pl-4">
                  {card.frictionTitle && (
                    <span class="mb-2 block text-xs uppercase tracking-[0.3em] text-[#fffafa]/35">
                      {card.frictionTitle}
                    </span>
                  )}
                  {card.frictionDescription && (
                    <p class="text-sm text-[#fffafa]/65 font-primary">
                      {card.frictionDescription}
                    </p>
                  )}
                </div>
                <div class="border-l-2 border-[#ff5d00] pl-4">
                  {card.solutionTitle && (
                    <span class="mb-2 block text-xs uppercase tracking-[0.3em] text-[#ff5d00]">
                      {card.solutionTitle}
                    </span>
                  )}
                  {card.solutionDescription && (
                    <p class="text-sm text-[#fffafa] font-primary">
                      {card.solutionDescription}
                    </p>
                  )}
                </div>
              </div>
              <div class="services-card__cta mt-6 flex flex-wrap gap-3"></div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </div>

  <div class="services-gradient" aria-hidden="true"></div>
</section>

<style is:inline>
  .services-section {
    background: radial-gradient(circle at 20% 20%, rgba(255, 93, 0, 0.12), transparent 45%),
      radial-gradient(circle at 80% 0%, rgba(120, 43, 12, 0.35), transparent 55%),
      linear-gradient(180deg, #030000 0%, #0a0201 50%, #040000 100%);
  }

  .services-spinner {
    animation: services-spin-slow 12s linear infinite;
  }

  .services-card {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      border-color 0.4s ease;
  }

  .services-card.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .services-reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .services-reveal.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .services-gradient {
    position: absolute;
    inset: 10% 0 auto;
    height: 50%;
    background: radial-gradient(
      circle at center,
      rgba(255, 93, 0, 0.15),
      transparent 70%
    );
    opacity: 0.4;
    pointer-events: none;
  }

  @keyframes services-spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>

<script is:inline>
  (() => {
    if (typeof window === "undefined") return;

    const cards = document.querySelectorAll(".services-card");
    const stickyBlock = document.querySelector(".services-reveal");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("is-visible");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.2 },
    );

    cards.forEach((card) => observer.observe(card));
    if (stickyBlock) {
      observer.observe(stickyBlock);
    }
  })();
</script>
