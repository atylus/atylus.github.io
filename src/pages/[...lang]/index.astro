---
import Base from "@/layouts/Base.astro";
import { generatePaths } from "@/lib/utils/i18nUtils";
import ClientsSection from "@/components/sections/Clients.astro";
import { getEntryCTM } from "@/lib/customContentLoader.astro";
import ServicesSection from "@/components/sections/ServicesSection.astro";
import PortfolioSection from "@/components/sections/PortfolioSection.astro";
import BannerSection from "@/components/sections/Banner.astro";
import AboutSection from "@/components/sections/AboutSection.astro";
import TestimonialsSection from "@/components/sections/TestimonialsSection.astro";

export function getStaticPaths() {
  return generatePaths();
}

const page = await getEntryCTM("homepage", "-index", Astro.currentLocale);
---

<Base
  {...page?.data}
  headerPosition="fixed"
  hasHeaderDarkBackground={true}
  headerClassName="header-business">
  <BannerSection />
  <AboutSection />
  <ServicesSection />
  <ClientsSection />
  <PortfolioSection />
  <TestimonialsSection />
</Base>
